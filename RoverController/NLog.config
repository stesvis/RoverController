<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue" />

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>

    <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->

    <!-- local file target -->
    <target name="fileTarget"
            xsi:type="File"
            fileName="${basedir}\Logs\Error\errors_${shortdate}.log"
            layout="
-------------- ${level} (${longdate}) --------------${newline}
${newline}
User Id: ${mdc:item=currentUserId}${newline}
Client Id: ${mdc:item=currentClientId}${newline}
Url: ${aspnet-request:serverVariable=Url}${newline}
Call Site: ${callsite}${newline}${newline}
EXCEPTION TYPE: ${exception:format=type}${newline}
EXCEPTION MESSAGE: ${exception:format=message}${newline}
STACK TRACE: ${exception:format=stacktrace}${newline}${newline}
INNER EXCEPTION: ${exception:format=type,message,method:maxInnerExceptionLevel=5:innerFormat=shortType,message,method}${newline}" />
    <!--ADDITIONAL INFO: ${message}${newline}" />-->

    <!-- local fatal target -->
    <target name="fatalTarget"
            xsi:type="File"
            fileName="${basedir}\Logs\Fatal\fatal_${shortdate}.log"
            layout="
-------------- ${level} (${longdate}) --------------${newline}
${newline}
User Id: ${mdc:item=currentUserId}${newline}
Client Id: ${mdc:item=currentClientId}${newline}
Url: ${aspnet-request:serverVariable=Url}${newline}
Call Site: ${callsite}${newline}${newline}
EXCEPTION TYPE: ${exception:format=type}${newline}
EXCEPTION MESSAGE: ${exception:format=message}${newline}
STACK TRACE: ${exception:format=stacktrace}${newline}${newline}
INNER EXCEPTION: ${exception:format=type,message,method:maxInnerExceptionLevel=5:innerFormat=shortType,message,method}${newline}" />
    <!--ADDITIONAL INFO: ${message}${newline}" />-->

    <!-- debug file target -->
    <target name="debugTarget"
            xsi:type="File"
            fileName="${basedir}\Logs\Debug\debug_${shortdate}.log"
            layout="(${longdate}) ${message}" />

    <!-- route file target -->
    <target name="routeTarget"
            xsi:type="File"
            fileName="${basedir}\Logs\Routes\route_${shortdate}.log"
            layout="(${longdate}) ${message}" />

    <!-- task file target -->
    <target name="taskTarget"
            xsi:type="File"
            fileName="${basedir}\Logs\Tasks\tasks_${shortdate}.log"
            layout="
-------------- ${level} (${longdate}) --------------${newline}
${newline}
Url: ${aspnet-request:serverVariable=Url}${newline}
Call Site: ${callsite}${newline}
Message: ${message}${newline}" />

    <!-- sms file target -->
    <target name="smsTarget"
            xsi:type="File"
            fileName="${basedir}\Logs\SMS\sms_${shortdate}.log"
            layout="
-------------- ${level} (${longdate}) --------------${newline}
${newline}
${message}${newline}" />

    <!-- push notifications file target -->
    <target name="notificationsTarget"
            xsi:type="File"
            fileName="${basedir}\Logs\PushNotifications\push_${shortdate}.log"
            layout="
-------------- ${level} (${longdate}) --------------${newline}
${newline}
${message}${newline}" />

    <!--
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->
  </targets>

  <rules>
    <!-- add your logging rules here -->
    <!-- local file logger -->
    <logger minlevel="Trace" name="fileLogger" writeTo="fileTarget" />
    <logger minlevel="Trace" name="fatalLogger" writeTo="fatalTarget" />
    <logger minlevel="Trace" name="debugLogger" writeTo="debugTarget" />
    <logger minlevel="Trace" name="routeLogger" writeTo="routeTarget" />
    <logger minlevel="Trace" name="taskLogger" writeTo="taskTarget" />
    <logger minlevel="Trace" name="smsLogger" writeTo="smsTarget" />
    <logger minlevel="Trace" name="notificationsLogger" writeTo="notificationsTarget" />

    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
  </rules>
</nlog>