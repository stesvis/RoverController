@{
    ViewBag.Title = "Oops";
}

<header class="page-header">
    <h2>@ViewBag.Title</h2>

    <div class="right-wrapper text-right">
        <ol class="breadcrumbs">
            <li>
                <a href="@Url.Action("Index", "Home")">
                    <i class="icons icon-home"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a>
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>@ViewBag.Title</span>
                </a>
            </li>
        </ol>

        @*<a class="sidebar-right-toggle" data-open="sidebar-right"></a>*@
    </div>
</header>

<section class="body-error error-inside">
    <div class="center-error">

        <div class="row">
            <div class="col-lg-8">
                <div class="main-error mb-3">
                    <h2 class="error-code text-dark text-center font-weight-semibold m-0">Oops!@*<i class="fa fa-file"></i>*@</h2>
                    <p class="error-explanation text-center">We're sorry, something went wrong.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <h4 class="text">Here are some useful links</h4>
                <ul class="nav nav-list flex-column primary">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")"><i class="fa fa-caret-right text-dark"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Manage")"><i class="fa fa-caret-right text-dark"></i> User Profile</a>
                    </li>
                    @*<li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-caret-right text-dark"></i> FAQ's</a>
                        </li>*@
                </ul>
            </div>
        </div>
    </div>
</section>