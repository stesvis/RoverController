@model RoverController.Web.ViewModels.Account.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
    ViewBag.Title = "Reset password";
}

<hgroup class="title">
    <h3>@ViewBag.Title</h3>
</hgroup>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="alert alert-info">
        <i class="fas fa-envelope"></i>&nbsp; Enter your username below and we will send you reset instructions!
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger help-block small" })
    @Html.HiddenFor(model => model.Code)

    <div class="form-group mb-3">
        <div class="row">
            <div class="col-lg-6 mb-3">
                @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger help-block small" })
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <div class="row">
            <div class="col-lg-6 mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg" })
                <span class="help-block small">Min. 6 characters and one digit</span>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger help-block small" })
            </div>
            <div class="col-lg-6 mb-3">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg" })
                <span class="help-block small">Please repeat your pasword</span>
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger help-block small" })
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <div class="row">
            <div class="col-lg-8 mb-3"></div>
            <div class="col-lg-4 mb-3">
                <input type="submit" class="btn btn-primary btn-block btn-lg" value="Reset" />
            </div>
        </div>
    </div>
}

@section Scripts {

}