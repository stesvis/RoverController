@model RoverController.Web.ViewModels.Account.LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
    ViewBag.Title = "Sign In";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger help-block small" })

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.UserName, new { @class = "float-left control-label" })
        <div class="input-group input-group-icon">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-lg" })
            <span class="input-group-addon">
                <span class="icon icon-lg">
                    <i class="fa fa-user"></i>
                </span>
            </span>
        </div>
        <div>
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger help-block small" })
        </div>
    </div>

    <div class="form-group mb-3">
        <div class="clearfix">
            @Html.LabelFor(m => m.Password, new { @class = "float-left control-label" })
            <a href="@Url.Action("ForgotPassword")" class="float-right small">Forgot Password?</a>
        </div>
        <div class="input-group input-group-icon">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg" })
            <span class="input-group-addon">
                <span class="icon icon-lg">
                    <i class="fa fa-lock"></i>
                </span>
            </span>
        </div>
        <div>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger help-block small" })
        </div>
    </div>

    <div class="form-group mb-3">
        <div class="row">
            <div class="col-lg-8">
                @*<div class="checkbox-custom checkbox-default">
                        <input id="RememberMe" name="RememberMe" type="checkbox" value="true">
                        @Html.LabelFor(m => m.RememberMe)
                    </div>*@
            </div>
            <div class="col-lg-4 text-right">
                <button type="submit" class="btn btn-primary btn-block btn-lg mt-2">Sign In</button>
            </div>
        </div>
    </div>

    @*<span class="mt-3 mb-3 line-thru text-center text-uppercase">
            <span>or</span>
        </span>

        <div class="mb-1 text-center">
            <a class="btn btn-facebook mb-3 ml-1 mr-1" href="#">Connect with <i class="fa fa-facebook"></i></a>
            <a class="btn btn-twitter mb-3 ml-1 mr-1" href="#">Connect with <i class="fa fa-twitter"></i></a>
        </div>*@

    @*<p class="text-center">Don't have an account yet? @Html.ActionLink("Register", "Register")</p>*@

}